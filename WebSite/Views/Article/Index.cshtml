@model IEnumerable<WebSite.ViewModels.ArticleViewModel>
@{
    @section _AsideLeft {
        @await Html.PartialAsync("_MenuNavigation")
    }
    @section _AsideRight {
        @await Html.PartialAsync("_FeedMenu")
    }
}
<link rel="stylesheet" href="~/css/articles.css" />

<div class="article-feed">
    @foreach (var article in Model)
    {
        <div class="article-post">
            <div class="article-post-header">
                <h2 class="article-title">@article.Title</h2>
                <span class="article-date">@article.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            <div class="article-post-content">
                <p>@article.Content</p>
            </div>

            <div class="article-post-tags">
                @foreach (var tag in article.Tags)
                {
                    <span class="article-tag">#@tag</span>
                }
            </div>
            <div class="article-post-footer">
                <span class="article-comments">💬 @article.CommentCount комментариев</span>
            </div>

            <div class="article-post-footer comment-form">
                <input class="comment-input" type="text" placeholder="Написать комментарий..." />
                <button class="comment-send-button">Отправить</button>
            </div>

        </div>
    }
</div>
